javascript:
    document.addEventListener('DOMContentLoaded', () => {
        const winners = document.querySelector("#winners")

        if(!winners.classList.contains('bg-image')) {
            const editColor = () => {
                if(window.innerWidth > 991) {
                    winners.style.backgroundColor = "red"
                }
                if(window.innerWidth < 991 && window.innerWidth > 768) {
                    winners.style.backgroundColor = "purple"
                }

                if(window.innerWidth < 768) {
                    winners.style.backgroundColor = "blue"
                }
            }
            editColor()

            window.addEventListener('resize', () => {
                editColor()
            })

        } else {
            console.log('class .bg-image exists')
        }
    })


